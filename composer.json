{
    "name": "codad5/php-inex",
    "description": "This is a php library that helps  to simulate node.js import / export",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aniezeofor CHibueze (codad5)",
            "email":"aniezeoformic@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Codad5\\PhpInex\\": "src/"
        }
    },
    "require": {
        "ext-json":"*",
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9"
    },
    "scripts":{
        "test":"./vendor/bin/phpunit",
        "stan": "./vendor/bin/phpstan analyse -c phpstan.neon",
        "start": "php -S localhost:2000"
    }
}
